{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules",
    "test",
    "mock",
    "*.example.ts"
  ]
}
